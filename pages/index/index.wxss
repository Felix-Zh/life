page {
  height: 100%;  
  background: #fcfcfc;
}

.swiper {
  width: 100%;
  height: 100%;
}

.dashboard-container {
  padding: 30rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.kent-container {
  margin-bottom: 30rpx;
  padding: 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-radius: 8px;
  background: #232922;
}

.kent-avatar {
  margin-right: 20rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.kent-notice-container text {
  display: block;
}

.kent-name {
  color: #53b234;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 0.8em;
}

.kent-notice {
  color: #fff;
  font-size: 40rpx;
}

.funcards-container {
  height: calc(100% - 220rpx);
}

.funcard {
  margin-bottom: 20rpx;
  padding: 20rpx;
  min-height: 300rpx;
  border-radius: 8px;
}

.funcard.fortune {
  background: linear-gradient(to top right, #76438a, #4f2561);
}

.funcard.joke {
  background: linear-gradient(to top right, rgb(197, 143, 63), #a76b0c);
}

.weather {
  display: flex;
  align-items: center;
}

.weather.default {
  background: linear-gradient(to top right, rgb(149, 239, 255), #3ec8ff);
}

.weather.gray {
  background: linear-gradient(to top right, rgb(197, 197, 197), #7a7a7a);
}

.weather.white {
  background: linear-gradient(to top right, rgb(238, 238, 238), #e2e2e2);
}

.weather.yellow {
  background: linear-gradient(to top right, rgb(192, 185, 170), rgb(119, 112, 95));
}

.weather-icon {
  margin: 0 60rpx 0 50rpx;
  width: 150rpx;
  height: 150rpx;
}

.weather-info view,
.weather-info text {
  color: #fff;
  font-size: 24rpx;
}

.weather.white .weather-info view,
.weather.white .weather-info text {
  color: #666;
}

.tmp {
  font-size: 100rpx !important;
  line-height: 120rpx;
}

.weather-desc {
  font-size: 30rpx;
}
